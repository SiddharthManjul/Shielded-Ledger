# =========================================
# Shielded Ledger Deployment Configuration
# =========================================

# IMPORTANT: DO NOT COMMIT THE ACTUAL .env FILE TO VERSION CONTROL

# ============ Network Configuration ============

# Private key for deployment (without 0x prefix)
PRIVATE_KEY=your_private_key_here

# Hedera RPC URLs
TESTNET_RPC_URL=https://testnet.hashio.io/api
MAINNET_RPC_URL=https://mainnet.hashio.io/api

# Active RPC URL (use one of the above)
RPC_URL=https://testnet.hashio.io/api

# ============ Pyth Network Configuration ============

# Pyth Network Contract Address on Hedera
# IMPORTANT: Get the actual address from:
# - Official Pyth docs: https://docs.pyth.network/price-feeds/contract-addresses
# - Hedera tutorial: https://github.com/hedera-dev/tutorial-js-pyth-oracle-contract-pull
# - Or contact Pyth/Hedera support for the latest testnet address
# Placeholder address (REPLACE WITH ACTUAL PYTH ADDRESS):
PYTH_CONTRACT_ADDRESS=0xA2aa501b19aff244D90cc15a4Cf739D2725B5729

# ============ Deployment Options ============

# Deploy mock tokens for testing (1 = yes, 0 = no)
# Set to 0 if you have existing token addresses
DEPLOY_MOCK_TOKENS=1

# Register price feeds automatically (1 = yes, 0 = no)
REGISTER_PRICE_FEEDS=1

# Deploy zkERC20 tokens (1 = yes, 0 = no)
DEPLOY_ZK_TOKENS=1

# Denomination for zkERC20 tokens (in wei)
# Default: 1 ether = 1000000000000000000
ZK_TOKEN_DENOMINATION=1000000000000000000

# ============ Existing Token Addresses (Optional) ============
# Only required if DEPLOY_MOCK_TOKENS=0

# Underlying token addresses (set these if using existing tokens)
PYUSD_TOKEN_ADDRESS=0x0000000000000000000000000000000000000000
BTC_TOKEN_ADDRESS=0x0000000000000000000000000000000000000000
ETH_TOKEN_ADDRESS=0x0000000000000000000000000000000000000000
HBAR_TOKEN_ADDRESS=0x0000000000000000000000000000000000000000

# ============ Price Feed IDs ============
# These are configured in the deployment script, listed here for reference

# Pyth Price Feed IDs (DO NOT CHANGE)
# PYUSD/USD: 0xc1da1b73d7f01e7ddd54b3766cf7fcd644395ad14f70aa706ec5384c59e76692
# BTC/USD:   0xe62df6c8b4a85fe1a67db44dc12de5db330f7ac66b72dc658afedf0f4a415b43
# ETH/USD:   0xff61491a931112ddf1bd8147cd1b641375f79f5825126d665480874634fd0ace
# HBAR/USD:  0x3728e591097635310e6341af53db8b7ee42da9b3a8d918f9463ce9cca886dfbd

# ============ Contract Verification ============

# Etherscan-like API Key for Hedera (if using contract verification)
ETHERSCAN_API_KEY=
