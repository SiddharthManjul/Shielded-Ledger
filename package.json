{
  "name": "diffipay",
  "version": "1.0.0",
  "private": true,
  "description": "DiffiPay - Privacy-preserving payment solution with ZK proofs",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "install:all": "pnpm install",
    "frontend:dev": "pnpm --filter @diffipay/frontend dev",
    "frontend:build": "pnpm --filter @diffipay/frontend build",
    "frontend:start": "pnpm --filter @diffipay/frontend start",
    "frontend:lint": "pnpm --filter @diffipay/frontend lint",
    "contracts:test": "cd packages/contracts && forge test",
    "contracts:build": "cd packages/contracts && forge build",
    "circuits:compile": "pnpm --filter @diffipay/circuits compile",
    "circuits:test": "pnpm --filter @diffipay/circuits test",
    "circuits:build": "pnpm --filter @diffipay/circuits build:contracts",
    "dev": "pnpm frontend:dev",
    "build": "pnpm frontend:build && pnpm circuits:compile && pnpm contracts:build",
    "test": "pnpm circuits:test && pnpm contracts:test"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "three": "^0.180.0"
  },
  "devDependencies": {
    "@types/three": "^0.180.0"
  }
}
